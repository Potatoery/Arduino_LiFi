        if((ber_string[i - SYNCBYTE] & (0x01 << j)) != 0){
          bitSet(string_Signal[i], 7-j);
        }else{
          bitClear(string_Signal[i], 7-j);
        }
      }
    }
  }
  signal_length = (strlen(ber_string) + SYNCBYTE + 1);
