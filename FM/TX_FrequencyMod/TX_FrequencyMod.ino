void buffer_ber_test(){
  for (int i = 0; i < strlen(ber_string) + SYNCBYTE + 1; i++) {
    if(i == SYNCBYTE - 1){
      for (int j = 0; j < 8; j++) {
        if(_symbol_SOT[7 - j]){
          bitSet(string_Signal[i], 7-j);
        }else{
          bitClear(string_Signal[i], 7-j);
        }
      }
    } else if(i < SYNCBYTE - 1){
      for (int j = 0; j < 8; j++) {
          bitClear(string_Signal[i], 7-j);
      }
    } else if(i == (strlen(ber_string) + SYNCBYTE)) {
